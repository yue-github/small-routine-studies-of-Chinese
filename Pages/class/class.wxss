@import "../template-navHead/template-navHead.wxss";
.search{
  padding:18rpx;
  display:flex;
  align-items: center;
}
.search-main{
  width:85%;
  height:50rpx;
  border-radius:5px;
  border:1px solid #ccc;
  display: flex;
  align-items: center;
}
.search-font{
  width:15%;
  display:flex;
  align-items: center;
  justify-content: center;
  font-size:33rpx;
  color:#55b7f5;

}
.search-icon{
  margin-left:15rpx;
}
.search-input{
  background:none;
  outline:none;
  border:none;
  font-size:26rpx;
  margin-left:13rpx;
  width:100%;
}
.nav-class{
  color:#999999;
  font-size:30rpx;
  display:flex;
  justify-content: space-between;
  align-items:center;
  padding:10rpx 80rpx;
}
.changeColor{
  color:#55b7f5;
}
.split{
  display:block;
  width:100%;
  height:5px;
  background:#F0F0F0;
}
.warn-line{
  width:120%;
  margin-left:-10%;
  height:3rpx;
  background:#55b7f5;
  margin-top:10rpx;
}


/* 课程列表部分 */
.class-container{
  margin-top:18rpx;
  padding:18rpx;
}
.class-detail{
  display:flex;
  align-items: center;
}
.detail-img{
  width:466rpx;
  height:180rpx;
  margin-right:10rpx;
}
.class-right{
  width:500rpx;
  font-size:25rpx;
  line-height:60rpx;
}
.price{
  color:#f40;
}
.price-detail{
  font-size:40rpx;
}
.class-foot{
  color:#999999;
  display:flex;

}
.introdece{
  color:#f40;
  font-size:16rpx;
  border:1px solid #f40;
  padding:1rpx 8rpx;
  border-radius:100px;
  margin-left:10rpx;
}
.float-right{
  margin-left:auto;
}
.class-foot-margin{
  margin-left:8rpx;
}
.pay{
  float:right;
  background:#55b7f5;
  padding:0 30rpx;
  color:#fff;
  font-size:28rpx;
  border-radius:50px;
}