@import "template-index/template-index.wxss";
.index-container{
  display:flex;
  flex-direction: column;
  align-items: center;
  box-sizing:border-box;
  padding-top:100rpx;
}
.logo{
  width:50rpx;
  height:50rpx;
}
.title{
  font-size:33rpx;
}
.share-btn{
  width:300rpx;
  height:50rpx;
  margin-top:250rpx;
  text-align: center;
  border-radius:10px;
  box-shadow:4px 2px 6px #333333;
  opacity:0.8;
  
}
.qing{
  margin-top:50rpx;
  width:600rpx;
  height:200px
}
.confirm{
  width:100%;
  height:100vh;
  background:#fff;
  position: relative;
  display:flex;
  justify-content: center;
}
.bg{
  width:100%;
  height:100%;
  background:#F0F0F0;
  opacity:0.9;
  position:absolute;
  top:0;
  left:0;
}
.content{
  width:600rpx;
  height:400rpx;
  background:#fff;
  position:absolute;
  z-index:1;
  border-radius:20px;
  margin-top:300rpx;
   
   
}
.confirm-title{
  width:100%;
  height:100rpx;
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom:1px solid #ccc;
}
.c-t-img{
  width:60rpx;
  height:60rpx;
  margin-right:10rpx;
}
.confirm-warn{
  font-size:33rpx;
  margin-top:10rpx;
  color:#9999;
  box-sizing:border-box;
  padding:0 18rpx;
}
.confirm-yes{
  display:flex;
  justify-content: center;
}
.yes-button{
  width:300rpx;
  height:80rpx;
  display:flex;
  align-items: center;
  font-size:30rpx;
  justify-content: center;
  border-radius:20px;
  margin-top:60rpx;
}
 