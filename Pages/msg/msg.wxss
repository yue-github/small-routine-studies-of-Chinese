
.container{
  font-size:30rpx;
}
.head{
  width:100%;
 height:80rpx;
  display:flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  box-sizing:border-box;
  padding:18rpx;
   
}
.line{
  width:90%;
  height:1px;
  background:#F0F0F0;
  margin:0 auto;

}
.center-img{
  width:300rpx;
  height:220rpx;
}
.center{
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top:100rpx;
}
.center-space{
  color:#ccc;
  font-size:25rpx;
}
.msg-content{
  width:100%;
  box-sizing:border-box;
  padding:0 18rpx;
   
}
.msg-detail{
  width:100%;
  border-bottom:1px solid #F0F0F0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  font-size:28rpx;
  padding:15rpx 0;
  word-break: break-all;
  

}
.c-time{
  color:#999999;
  text-align: right;
  font-size:20rpx;
}
.changeColor{
  color:#f40;
  margin-right:8rpx;
  font-size:30rpx;
}