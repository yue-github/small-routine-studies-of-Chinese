@import '../template-search/template-search';
@import '../template-class/template-class';
 
.container{
  font-size:30rpx;
}
.head{
  width:100%;
  height:80rpx;
  display:flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
  box-sizing:border-box;
  padding:18rpx;
   
}
.line{
  width:90%;
  height:1px;
  background:#F0F0F0;
  margin:0 auto;

}
.warn-null-img{
  width:300rpx;
  height:220rpx;
}
.warn-null{
  display:flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  margin-top:100rpx;
}
.warn-null-space{
  color:#ccc;
  font-size:25rpx;
}
.split{
  width:100%;
  height:5rpx;
  background:#fff;
  display:none;
}
/* 轮播 */
.banner-swiper{
  width:100%;
  transform: translateZ(0);
}
.banner-swiper swiper-item{
  width:100%;
}
.banner-swiper swiper-item image{
  display:block;
  width:100%;
  height:350rpx;
}
.nav{
  width:100%;
  box-sizing:border-box;
  display:flex;
  justify-content: space-evenly;
  flex-wrap:wrap;
  background: #fff;
  padding-bottom:18rpx;

}
.nav-child{
  width:23%;
  height:110rpx;
  margin-top:18rpx;
  display:flex;
  align-items: center;
  justify-content: center;
  font-size:50rpx;
  flex-direction: column;
  color:#55b7f5;
  
}
.nav-font{
  font-size:23rpx;
  color:#000;
  margin-top:6rpx;

}
.quan{
  width:70rpx;
  height:80rpx;
  border-radius:100%;
  border:1px solid #55b7f5;
  display:flex;
  align-items: center;
  justify-content: center;
}
.center{
  background:#F0F0F0;
}
.content-detail{
  width:100%;
  margin-top:15rpx;
}
.change-margin{
  margin-top:18rpx;
  background:#fff;
}
.img-change{
  margin-top:18rpx;
}