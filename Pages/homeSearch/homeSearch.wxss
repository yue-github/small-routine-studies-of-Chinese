@import '../template-search/template-search';
.line{
  width:100%;
  height:1rpx;
  background:#F0F0F0;
}

/* 课程列表部分 */
.class-container{
  margin-top:18rpx;
  padding:18rpx;
}
.class-detail{
  display:flex;
  align-items: center;
  margin-bottom: 15rpx;
}
.detail-img{
  width:466rpx;
  height:160rpx;
  margin-right:10rpx;
}
.class-right{
  width:500rpx;
  font-size:25rpx;
  line-height:60rpx;
}
.price{
  color:#f40;
}
.class-center{
  width:400rpx;
  white-space: nowrap;
  overflow:hidden;
  text-overflow:ellipsis;
}
.price-detail{
  font-size:40rpx;
}
.class-top{
   width:100%;
   display: flex;
}
.className{
  width:200rpx;
  white-space: nowrap;
  overflow:hidden;
  text-overflow: ellipsis;

}
.class-foot{
  color:#999999;
  display:flex;

}
.introdece{
  color:#f40;
  font-size:16rpx;
  border:1px solid #f40;
  padding:1rpx 8rpx;
  border-radius:100px;
  margin-left:10rpx;
}
.float-right{
  margin-left:auto;
}
.class-foot-margin{
  margin-left:8rpx;
}
.pay{
  width:120rpx;
  height:50rpx;
  display:flex;
  margin-left:auto;
  align-items: center;
  justify-content: center;
  background:#55b7f5;
  box-sizing:border-box;
  color:#fff;
  font-size:28rpx;
  border-radius:50px;
  margin-top:8rpx;
}