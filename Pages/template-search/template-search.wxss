.search{
  width:100%;
  box-sizing:border-box;
  padding:18rpx;
  
  display:flex;
  align-items: center;
}
.search-main{
  width:85%;
  height:50rpx;
  border-radius:5px;
  border:1px solid #ccc;
  display: flex;
  align-items: center;
}
.search-font{
  width:15%;
  display:flex;
  align-items: center;
  justify-content: center;
  font-size:33rpx;
  color:#55b7f5;

}
.search-icon{
  margin-left:15rpx;
}
.search-input{
  background:none;
  outline:none;
  border:none;
  font-size:26rpx;
  margin-left:13rpx;
  width:100%;
}