@import "../template-navHead/template-navHead.wxss";
.content{
  width:100%;
  margin-top:53rpx;
}
.title{
  width:100%;
  display:flex;
  align-items:center;
  justify-content: center;
  box-sizing:border-box;
   
}
.title-detail{
   height:68rpx;
   display:flex;
   align-items: center;
  border-bottom:1px solid #F0F0F0;
}
.content-detail{
  width:100%;
  
}
.detail-child{
  width:100%;
  height:68rpx;
  box-sizing:border-box;
  padding:5rpx 18rpx;
  font-size:40rpx;
  display:flex;
  align-items: center;
  border-bottom:1px solid #F0F0F0;
  color:#999999;

}
.floatRight{
  margin-left:auto;
  color:#55b7f5;
}
.detail-child > input{
  width:600rpx;
  font-size:30rpx;
  color:#000;
}
.add-img{
   width:200rpx;
  padding:10rpx;
  display:flex;
  justify-content: center;
  align-items: center;
  border:1px solid #F0F0F0;
  margin:0 auto;
  box-shadow:4px 2px 6px;
  margin-top:38rpx;
  font-size:38rpx;
  margin-bottom: 10rpx;
}
.submit{
  width:95%;
  height: 86rpx;
  margin:0 auto;
  margin-top:38rpx;
  background:#28FF28;
  display:flex;
  align-items: center;
  justify-content: center;
  color:#fff;
  border-radius:10rpx;
  font-size:40rpx;
}
.chooseImg{
  width:50%;
  margin:0 auto;
}
.er-img{
  width:100%;
  box-sizing:border-box;
  display:flex;
  align-items: center;
  justify-content: center;
  margin-top:18rpx;
}